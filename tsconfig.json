{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "noImplicitAny": false
    },
    "include": ["resources/js/**/*"],
    "exclude": ["node_modules", "vendor"]
}
